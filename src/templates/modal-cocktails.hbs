{{#each this}}
<div class="modal modal-cocktails">
    <button type="button" class="modal__close-btn" data-modal-win-close>

        <svg class="modal__close-btn-icon" width="32" height="32">
            <use xlink:href="./images/clarity_close.svg"></use>
        </svg>
    </button>
    <div class="modal-cocktails__container">
        <h2 class="modal-cocktails__title modal__title">{{strDrink}}</h2>
        <div class="instractions">
            <h3 class="instractions__title">Instractions:</h3>
            <p class="instractions__descr">{{strInstructions}}</p>
        </div>
        <div class="modal-upper">
            <img class="modal-cocktails__img" src="{{strDrinkThumb}}" alt="{{strDrink}}">
            <div class="ingredients">
                <h3 class="ingredients__title">INGREDIENTS</h3>
                <p class="ingredients__text">Per cocktail</p>
                <ul class="ingredients-list cocktail-list">
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link" data-modal-ingredients-open>{{strIngredient1}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient2}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient3}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient4}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient5}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient6}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient7}}</a>
                    </li>
                    <li class="ingredients-list__item cocktail-list__item">
                        <a href="" class="ingredients-list__link cocktail-list__link link"
                            data-modal-ingredients-open>{{strIngredient8}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <button type="button" class="modal__bottom-btn modal-cocktails__bottom-btn">Add to favorite</button>
</div>
{{/each}}